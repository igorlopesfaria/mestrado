<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="br.ufba.exerciserecognition.fragment.MainFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/nameETX"
            android:background="@drawable/background_spinner"
            android:textColor="@color/colorPrimary"
            android:padding="10dp"
            android:hint="@string/name"

            android:layout_marginRight="5dp"
            android:textSize="14dp"
            android:textColorHint="@color/grayLight"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@+id/syncWatchBTN" />


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/typeExperimentSP"
            android:background="@drawable/background_spinner"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/nameETX"/>


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/typeExerciseSP"
            android:background="@drawable/background_spinner"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/typeExperimentSP"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_below="@+id/chronometer"
            android:orientation="vertical"
            android:gravity="center">
            <Button
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:text="PLAY"
                android:textSize="22dp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_primary_color"
                android:id="@+id/onBTN"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:text="STOP"
                android:textSize="22dp"

                android:id="@+id/offBTN"
                android:textColor="@android:color/white"
                android:background="@drawable/button_primary_color" />
        </LinearLayout>



        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="90dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/typeExerciseSP"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/arrow"
            android:layout_marginRight="5dp"
            android:layout_alignEnd="@+id/typeExperimentSP"
            android:layout_alignTop="@+id/typeExperimentSP"
            android:layout_alignBottom="@+id/typeExperimentSP" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/arrow2IMG"
            android:src="@drawable/arrow"
            android:layout_marginRight="5dp"

            android:layout_alignBottom="@+id/typeExerciseSP"
            android:layout_alignEnd="@+id/typeExerciseSP"
            android:layout_alignTop="@+id/typeExerciseSP" />


        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/syncWatchBTN"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/icone_watch"
            android:background="@drawable/button_primary_color"

            android:layout_marginTop="10dp"/>
    </RelativeLayout>
</RelativeLayout>
